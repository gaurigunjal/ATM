                    
    <%= form_with(model: @account, local: true)  do |form| %>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-lg" >
                <%= form.label :user_id %>
            </label>
            <div class="col-sm-10 " >
                <%= form.select :user_id, User.all.map{|u| [u.fullname, u.id]}, {}, class:"form-control form-control-md mt-2"   %>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-lg" >
                <%= form.label :account_number %>
            </label>
            <div class="col-sm-10 " >
                <%= form.text_field :account_number, class:"form-control form-control-md mt-2", placeholder: "Enter the account number" %>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-lg" >
                <%= form.label :balance %>
            </label>
            <div class="col-sm-10 " >
                <%= form.number_field :balance, class:"form-control form-control-md mt-2", placeholder: "Enter the balance" %>
            </div>
        </div>

        <div class="mt-5" id="center">
            <%= form.submit(@account.new_record? ? "Create a new account" : "Update the account", class:"submit-btn btn btn-warning ") %>
            <%= link_to "Go back", accounts_path , class:"btn btn-dark ", style: "float: right;" %>
        </div>
    <% end %>